{
  "author": "BLCK",
  "name": "mrt",
  "version": "9.0.0",
  "description": "MusicReleaseTracker",
  "type": "module",
  "main": "electron-main.js",
  "private": true,
  "build": {
    "directories": {
      "output": "distribution",
      "buildResources": "buildResources"
    },
    "appId": "blck.mrt",
    "productName": "MusicReleaseTracker",
    "extraFiles": [
      {
        "from": "buildResources/MusicReleaseTracker.exe",
        "to": "buildResources/MusicReleaseTracker.exe"
      }
    ],
    "win": {
      "asar": true,
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "buildResources/MRTicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "installerIcon": "buildResources/MRTicon.ico",
      "uninstallerIcon": "buildResources/MRTicon.ico",
      "uninstallDisplayName": "MusicReleaseTracker",
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "shortcutName": "MusicReleaseTracker",
      "installerHeaderIcon": "buildResources/MRTicon.ico",
      "license": "../../license.txt"
    },
    "artifactName": "MRT-${version}-win.${ext}"
  },
  "scripts": {
    "dev": "vite",
    "buildVue": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "distExe": "electron-builder --dir",
    "distInstaller": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "vue": "^3.4.38",
    "vue-router": "^4.4.3",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.9.1",
    "electron": "^32.0.1",
    "@vitejs/plugin-vue": "^5.1.3",
    "eslint": "^9.9.1",
    "eslint-plugin-vue": "^9.27.0",
    "globals": "^15.9.0",
    "vite": "^5.4.2"
  }
}
